include ../components/pageTemplate
include ../components/progressBar

mixin project(team, badges, color, progressWidth, price)
  article(class="project | rect")
    .head.between-flex
      +subHeading("Project Name", "Project description", 3, "base fs-md")
      time.cl-gray.fs-xs 00/00/0000
    .team
      each member, i in team
        img(class="member | relative" src=`assets/images/team/${member}.png` alt="Member name" style=`--i: ${i}`)
    .badges.flex
      each badge in badges
        .badge=badge
    .foot.between-flex
      +progressBar(color, progressWidth, "", false)
      div.cl-gray.fs-sm #[strong $]#[span=price]


//- Page
+pageTemplate("Projects")
  +project([1, 3, 4], ["Programming", "Design"], "red", 30, 200)
  +project([1, 2], ["Design"], "green", 100, 150)
  +project([1, 2, 3], ["Design", "Marketing"], "blue", 80, 250)
  +project([1, 2, 3, 4], ["Programming", "Design", "Hosting", "Marketing"], "orange", 60, 800)
